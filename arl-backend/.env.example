# ARL Backend Environment Configuration

# ==========================================
# Application Settings
# ==========================================

APP_NAME=ARL API
DEBUG=false

# ==========================================
# Database Configuration
# ==========================================

DATABASE_URL=postgresql://arl_user:your_password@localhost:5432/arl_dev

# ==========================================
# Redis Configuration
# ==========================================

REDIS_URL=redis://localhost:6379/0

# ==========================================
# JWT Authentication
# ==========================================

JWT_SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=30

# ==========================================
# CORS Configuration
# ==========================================

CORS_ORIGINS=["http://localhost:5173", "http://localhost:3000"]

# ==========================================
# LLM Configuration (Google ADK)
# ==========================================

# Provider options: anthropic, google, azure, bedrock, openai
LLM_PROVIDER=anthropic
LLM_MODEL=claude-sonnet-4-20250514
LLM_MAX_TOKENS=4096

# Anthropic - Native ADK support
# https://console.anthropic.com/
ANTHROPIC_API_KEY=

# Google/Gemini - Native ADK support
# https://aistudio.google.com/
# GOOGLE_API_KEY=

# Azure OpenAI - via ADK LiteLLM
# AZURE_API_KEY=
# AZURE_API_BASE=https://your-resource.openai.azure.com/
# AZURE_API_VERSION=2024-02-15-preview

# AWS Bedrock - via ADK LiteLLM
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_REGION_NAME=us-east-1

# OpenAI - via ADK LiteLLM
# OPENAI_API_KEY=
